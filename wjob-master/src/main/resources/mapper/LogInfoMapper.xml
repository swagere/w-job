<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kve.master.mapper.LogInfoMapper">

    <resultMap id="BaseResultMap" type="com.kve.master.model.bean.LogInfo">
        <id column="id" property="id" jdbcType="INTEGER" javaType="Integer"/>
        <result column="content" property="content" jdbcType="VARCHAR" javaType="String"/>
        <result column="log_desc" property="logDesc" jdbcType="VARCHAR" javaType="String"/>
        <result column="remarks" property="remarks" jdbcType="VARCHAR" javaType="String"/>
        <result column="ip_address" property="ipAddress" jdbcType="VARCHAR" javaType="String"/>
        <result column="operate_id" property="operateId" jdbcType="VARCHAR" javaType="String"/>
        <result column="operate_name" property="operateName" jdbcType="VARCHAR" javaType="String"/>
        <result column="job_id" property="jobId" jdbcType="INTEGER" javaType="Integer"/>
        <result column="log_type" property="logType" jdbcType="TINYINT" javaType="Integer"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" javaType="java.util.Date"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" javaType="java.util.Date"/>
    </resultMap>

    <resultMap id="PageListResultMap" type="com.kve.master.model.vo.LogItemVO">
        <id column="id" property="id" jdbcType="INTEGER" javaType="Integer"/>
        <result column="log_desc" property="logDesc" jdbcType="VARCHAR" javaType="String"/>
        <result column="remarks" property="remarks" jdbcType="VARCHAR" javaType="String"/>
        <result column="ip_address" property="ipAddress" jdbcType="VARCHAR" javaType="String"/>
        <result column="operate_id" property="operateId" jdbcType="VARCHAR" javaType="String"/>
        <result column="operate_name" property="operateName" jdbcType="VARCHAR" javaType="String"/>
        <result column="job_id" property="jobId" jdbcType="INTEGER" javaType="Integer"/>
        <result column="trigger_name" property="triggerName" jdbcType="VARCHAR" javaType="String"/>
        <result column="trigger_group" property="triggerGroup" jdbcType="VARCHAR" javaType="String"/>
        <result column="target_class" property="targetClass" jdbcType="VARCHAR" javaType="String"/>
        <result column="target_method" property="targetMethod" jdbcType="VARCHAR" javaType="String"/>
        <result column="log_type" property="logType" jdbcType="TINYINT" javaType="Integer"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" javaType="java.util.Date"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" javaType="java.util.Date"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,content,log_desc,remarks,ip_address,operate_id
        ,operate_name,job_id,log_type,create_time,update_time
    </sql>

    <insert id="addLog">
        <selectKey resultType="java.lang.Integer" keyProperty="id" order="AFTER">
            SELECT
            LAST_INSERT_ID()
        </selectKey>
        INSERT INTO scheduled_log(
        id,
        job_id,
        log_type,
        log_desc,
        content,
        ip_address,
        operate_id,
        operate_name,
        remarks
        )VALUES
        (
        null,
        #{jobId,jdbcType=INTEGER},
        #{logType,jdbcType=TINYINT},
        #{logDesc,jdbcType=VARCHAR},
        #{content,jdbcType=VARCHAR},
        #{ipAddress,jdbcType=VARCHAR},
        #{operateId,jdbcType=VARCHAR},
        #{operateName,jdbcType=VARCHAR},
        #{remarks,jdbcType=VARCHAR}
        )
    </insert>

    <select id="getById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM scheduled_log
        WHERE
        id = #{id,jdbcType=INTEGER}
    </select>

    <select id="getByJobId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM scheduled_log
        WHERE
        job_id = #{jobId,jdbcType=INTEGER}
    </select>

    <select id="listPageByCondition" parameterType="com.kve.master.model.dto.LogPageQueryDTO"
            resultMap="PageListResultMap">
        SELECT
        a.id,
        a.log_desc,
        a.remarks,
        a.operate_id,
        a.operate_name,
        a.job_id,
        b.trigger_name,
        b.trigger_group,
        b.target_class,
        b.target_method,
        a.log_type,
        a.create_time,
        a.update_time
        FROM scheduled_log a
        INNER JOIN scheduled_task b on a.job_id=b.id
        WHERE b.del_flag = 0
        <if test="jobId !=null">
            AND a.job_id =#{jobId,jdbcType=INTEGER}
        </if>
        <if test="triggerNameLike != null and triggerNameLike !='' ">
            AND b.trigger_name LIKE CONCAT(#{triggerNameLike,jdbcType=VARCHAR},'%')
        </if>
        <if test="logType !=null and logType!= -1">
            AND a.log_type =#{logType,jdbcType=TINYINT}
        </if>
        <if test="operateId !=null and operateId!= ''">
            AND a.operate_id =#{operateId,jdbcType=VARCHAR}
        </if>
        <if test="operateNameLike !=null and operateNameLike!= ''">
            AND a.operate_name LIKE CONCAT(#{operateNameLike,jdbcType=VARCHAR},'%')
        </if>
        <if test="contentLike != null and contentLike !='' ">
            AND a.content LIKE CONCAT(#{contentLike,jdbcType=VARCHAR},'%')
        </if>
        <if test="createStartTime != null ">
            AND a.create_time <![CDATA[ >= ]]> #{createStartTime,jdbcType=TIMESTAMP}
        </if>
        <if test="createEndTime != null ">
            AND a.create_time <![CDATA[ <= ]]> #{createEndTime,jdbcType=TIMESTAMP}
        </if>
        ORDER BY a.create_time DESC
        LIMIT #{limit},#{pageSize}
    </select>

</mapper>
