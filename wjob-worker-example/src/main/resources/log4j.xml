<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//log4j/log4j Configuration//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" threshold="null" debug="null">

	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d   WJobWorker --- %p [%c]-[%t] : %m%n"/>
		</layout>
	</appender>
	
    <appender name="FILE" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="E:/data/applogs/w-job/w-job-executor.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d   WJobWorker --- %p [%c]-[%t] : %m%n"/>
        </layout>
    </appender>
    
    <appender name="w-job" class="com.kve.worker.log.FileAppender">
        <param name="filePath" value="E:/data/applogs/w-job/executors/"/>
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d   WJobWorker --- %p [%c]-[%t] : %m%n"/>
        </layout>
    </appender>
    
    <root>
        <level value="INFO" />
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="w-job"/>
    </root>
    <logger name="com.kve.worker" additivity="false">
    	<level value="INFO" />
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="w-job"/>
    </logger>
    <logger name="com.kve.worker_example.bean.HelloJob" additivity="false">
    	<level value="INFO" />
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="w-job"/>
    </logger>
    
    
</log4j:configuration>